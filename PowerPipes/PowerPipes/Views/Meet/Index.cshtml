@using PowerPipes.Models
@model List<MeetHeader>

@section Styles {
	<link href="@Url.Content("~/Content/Meet.css")" rel="stylesheet" type="text/css" />
}

<div class="jumbotron">
	<h2>
		<span class="title">Liste de vos résultats de compétitions</span>
		<button type="button" id="btnCreate" class="btn btn-primary pull-right">Ajouter un résultat de compétition</button>
	</h2>

	@foreach (var meet in Model)
	{
		<div class="divTraining" onclick="window.location.href = '@Url.Action("Details", "Meet", new { idMeet =  @Html.ValueFor(x => meet.Id) })'">
			<div class="col-sm-10 bold padding-top">
				@Html.DisplayFor(x => meet.Name)
			</div>

			<div class="col-sm-2 italic right-align padding-top version">
				@Html.DisplayFor(x => meet.Date)
			</div>

			<div class="overlay"></div>
		</div>
	}
</div>

<script>
    $("#btnCreate").click(function () {
        window.location.href = '@Url.Action("Create", "Meet")';
    });
</script>